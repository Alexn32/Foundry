# Foundry Configuration
# All settings are configurable via environment variables
# This makes it easy to change behavior without code changes

# Database
DATABASE_URL="postgresql://user:password@host:port/dbname"

# AI Provider
AI_PROVIDER="anthropic" # or "openai"
ANTHROPIC_API_KEY="sk-ant-..."
# OPENAI_API_KEY="sk-..." # If using OpenAI

# AI Models
ONBOARDING_MODEL="claude-3-sonnet-20240229" # Fast, good for conversation
ANALYSIS_MODEL="claude-3-sonnet-20240229"   # Deep analysis
CODE_MODEL="claude-3-sonnet-20240229"       # Code generation

# Features (enable/disable)
ENABLE_COMPETITOR_SCRAPING="false" # Set to true when ready
ENABLE_FILE_PROCESSING="true"
ENABLE_REAL_TIME_ALERTS="false"

# Onboarding Settings
MAX_FOLLOW_UP_QUESTIONS="3"
MIN_CLARITY_SCORE="6"

# Agent Settings
AGENT_APPROVAL_REQUIRED="true" # All agent actions need founder approval
DEFAULT_TASK_PRIORITY="medium"

# Monitoring
LOG_LEVEL="info" # debug, info, warn, error
ENABLE_METRICS="true"

# External Services (future)
# GITHUB_TOKEN="..."
# STRIPE_API_KEY="..."
# SENDGRID_API_KEY="..."
